@model NS_Stoel_Vinder_Applicatie.ViewModels.InlogViewModel

@{
    ViewData["Title"] = "Inloggen";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <p>U kunt hier inloggen om een reisplan te maken.</p>
</div>


<br />
<div class="text-left">
    <div class="row">
        <div class="col-md-12">
            <form method="post">
                @Html.ValidationMessageFor(m => m.Email)
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group text-right">
                    <a asp-action="ResetPassword" asp-controller="Account">Wachtwoord vergeten?</a>
                </div>
                <br />
                <div id="buttonslogin" class="form-group text-right">

                    <button type="reset" value="clear" class="btn btn-primary">Annuleren</button> &nbsp; &nbsp; &nbsp; <button type="submit" class="btn btn-primary">Inloggen</button>
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    Heeft u nog geen account? <a asp-action="Registration" asp-controller="Account">Registreren</a>
                    <br />
                    <br />
                    Wilt u uw account verwijderen? <a asp-action="Delete" asp-controller="Account">Account Verwijderen</a>
                    <br />
                </div>
            </form>
        </div>
    </div>
</div>
